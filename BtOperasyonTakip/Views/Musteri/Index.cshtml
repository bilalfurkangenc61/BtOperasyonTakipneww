@model IEnumerable<BtOperasyonTakip.Models.Musteri>
@{
    ViewData["Title"] = "Müşteri Listesi";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Yeni Müşteri Ekle</h2>

    <form asp-action="Index" method="post" class="row g-3 border p-3 rounded bg-light mb-4 shadow-sm">
        <div class="col-md-4">
            <label class="form-label">Firma</label>
            <input name="Firma" class="form-control" required />
        </div>

        <div class="col-md-4">
            <label class="form-label">Firma Yetkilisi</label>
            <input name="FirmaYetkilisi" class="form-control" placeholder="Ad Soyad" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Site URL</label>
            <input name="SiteUrl" class="form-control" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Teknoloji</label>
            <select name="Teknoloji" class="form-select">
                <option value="">Seçiniz</option>
                @foreach (var t in ViewBag.Teknolojiler)
                {
                    <option value="@t.ParAdi">@t.ParAdi</option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label">Durum</label>
            <input name="Durum" class="form-control" placeholder="Aktif / Pasif / Beklemede" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Talep Eden</label>
            <select name="TalepSahibi" class="form-select">
                <option value="">Seçiniz</option>
                @foreach (var t in ViewBag.TalepEdenler)
                {
                    <option value="@t.ParAdi">@t.ParAdi</option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label">Telefon</label>
            <input name="Telefon" class="form-control" placeholder="0 5xx xxx xx xx" maxlength="20"
                   oninput="this.value = this.value.replace(/[^0-9+ ]/g, '').substring(0, 20)" />
        </div>

        <div class="col-md-12">
            <label class="form-label">Açıklama</label>
            <textarea name="Aciklama" class="form-control" rows="3" placeholder="Müşteri hakkında kısa not ekle..."></textarea>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-success px-4">💾 Kaydet</button>
        </div>
    </form>

    <hr class="my-4" />

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Kayıtlı Müşteriler</h3>
        <div class="d-flex gap-2">
            <button id="btnExportExcel" class="btn btn-outline-success btn-sm">
                <i class="fas fa-file-excel"></i> Excel'e Aktar
            </button>
            <button id="btnExportPdf" class="btn btn-outline-danger btn-sm">
                <i class="fas fa-file-pdf"></i> PDF'e Aktar
            </button>
            <button id="btnPrint" class="btn btn-outline-info btn-sm">
                <i class="fas fa-print"></i> Yazdır
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" id="searchInput" class="form-control" placeholder="Firma adına göre ara...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="statusFilter" class="form-select">
                        <option value="">Tüm Durumlar</option>
                        <option value="Aktif">Aktif</option>
                        <option value="Pasif">Pasif</option>
                        <option value="Beklemede">Beklemede</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="teknolojiFilter" class="form-select">
                        <option value="">Tüm Teknolojiler</option>
                        @foreach (var t in ViewBag.Teknolojiler)
                        {
                            <option value="@t.ParAdi">@t.ParAdi</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button id="btnClearFilters" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times"></i> Temizle
                    </button>
                </div>
            </div>

            <table class="table table-striped table-bordered align-middle" id="musteriTable">
                <thead class="table-secondary">
                    <tr>
                        <th>ID</th>
                        <th>Firma</th>
                        <th>Yetkili</th>
                        <th>Site URL</th>
                        <th>Teknoloji</th>
                        <th>Durum</th>
                        <th>Talep Sahibi</th>
                        <th>Telefon</th>
                        <th>Kayıt Tarihi</th>
                        <th>Açıklama</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.MusteriID</td>
                            <td>@m.Firma</td>
                            <td>@m.FirmaYetkilisi</td>
                            <td>
                                @if (!string.IsNullOrEmpty(m.SiteUrl))
                                {
                                    <a href="@m.SiteUrl" target="_blank" class="text-decoration-none">
                                        <i class="fas fa-external-link-alt"></i> Siteyi Gör
                                    </a>
                                }
                                else
                                {

                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td><span class="badge bg-info">@m.Teknoloji</span></td>
                            <td>
                                @{
                                    var statusClass = m.Durum switch
                                    {
                                        "Aktif" => "bg-success",
                                        "Pasif" => "bg-secondary",
                                        "Beklemede" => "bg-warning",
                                        _ => "bg-light text-dark"
                                    };
                                }
                                <span class="badge @statusClass">@m.Durum</span>
                            </td>
                            <td>@m.TalepSahibi</td>
                            <td>
                                @if (!string.IsNullOrEmpty(m.Telefon))
                                {
                                    <a href="tel:@m.Telefon" class="text-decoration-none">
                                        <i class="fas fa-phone"></i> @m.Telefon
                                    </a>
                                }
                                else
                                {

                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">@(m.KayitTarihi.HasValue? m.KayitTarihi.Value.ToString("dd.MM.yyyy") : "-")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(m.Aciklama))
                                {
                                    <span title="@m.Aciklama" data-bs-toggle="tooltip">
                                        @(m.Aciklama.Length > 30 ? m.Aciklama.Substring(0, 30) + "..." : m.Aciklama)
                                    </span>
                                }
                                else
                                {

                                    <span class="text-muted">-</span>
                                }
                            </td>
                        
                          



                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- ✅ JQUERY -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- ✅ Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    <script>
        $(document).ready(function () {

            // 🧱 Eğer tablo zaten DataTable olarak başlatılmışsa destroy et
            if ($.fn.DataTable.isDataTable('#musteriTable')) {
                $('#musteriTable').DataTable().destroy();
            }

            // 🔹 DataTable’ı başlat
            var table = $('#musteriTable').DataTable({
                language: { url: "https://cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json" },
                pageLength: 10,
                order: [[8, "desc"]],
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> Excel',
                        className: 'btn btn-success btn-sm',
                        title: 'Müşteri Listesi',
                        filename: 'musteri_listesi_' + new Date().toISOString().slice(0, 10)
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i> PDF',
                        className: 'btn btn-danger btn-sm',
                        title: 'Müşteri Listesi',
                        filename: 'musteri_listesi_' + new Date().toISOString().slice(0, 10)
                    },
                    {
                        extend: 'print',
                        text: '<i class="fas fa-print"></i> Yazdır',
                        className: 'btn btn-info btn-sm'
                    }
                ]
            });

            // 🚫 Enter tuşuna basınca form gönderme!
            $('form').on('keypress', function (e) {
                if (e.which === 13) e.preventDefault();
            });

            // 🔍 Firma adına göre arama
            $('#searchInput').on('keyup', function () {
                table.column(1).search(this.value, true, false).draw();
            });

            // 🔽 Filtreler
            $('#statusFilter').on('change', function () {
                table.column(5).search(this.value).draw();
            });

            $('#teknolojiFilter').on('change', function () {
                table.column(4).search(this.value).draw();
            });

            $('#btnClearFilters').on('click', function () {
                $('#searchInput, #statusFilter, #teknolojiFilter').val('');
                table.search('').columns().search('').draw();
            });

            // 📄 Manuel export butonları
            $('#btnExportExcel').on('click', function () { table.button('.buttons-excel').trigger(); });
            $('#btnExportPdf').on('click', function () { table.button('.buttons-pdf').trigger(); });
            $('#btnPrint').on('click', function () { table.button('.buttons-print').trigger(); });

            // 💡 Tooltip aktif et
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}


