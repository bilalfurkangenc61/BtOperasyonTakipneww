@model BtOperasyonTakip.Models.DashboardViewModel
@{
    ViewData["Title"] = "Ana Sayfa | BT Operasyon Takip";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css" />

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(180deg, #f6f9ff 0%, #eaf1ff 100%);
        min-height: 100vh;
    }

    .welcome-bar {
        background: linear-gradient(90deg, #0056d6, #007bff);
        color: #fff;
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        .welcome-bar h5 {
            margin: 0;
            font-weight: 600;
        }

        .welcome-bar .sub {
            font-size: 0.9rem;
            opacity: 0.9;
        }

    .stat-card {
        border: none;
        border-radius: 1rem;
        color: #fff;
        transition: all 0.3s ease;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.12);
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .chart-card {
        border-radius: 1rem;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        background: #fff;
    }

    .chart-box {
        height: 260px;
        max-height: 260px;
    }

    table.dataTable thead {
        background: #eaf0ff;
        color: #003366;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-up {
        animation: fadeInUp 0.7s ease forwards;
    }
</style>

<div class="container-fluid mt-4 animate-up">

    <div class="welcome-bar">
        <div>
            <h5>👋 Hoş geldin, <strong>@(User.Identity?.Name ?? "Kullanıcı")</strong>!</h5>
            <div class="sub" id="motivasyonMetni"></div>
        </div>
        <div id="saatTarih"></div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card stat-card bg-primary text-center">
                <div class="card-body">
                    <h6>Toplam Müşteri</h6><h2>@Model.ToplamMusteri</h2>
                    <small>Tüm kayıtlı müşteriler</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card stat-card bg-success text-center">
                <div class="card-body">
                    <h6>Aktif Müşteri</h6><h2>@Model.AktifMusteri</h2>
                    <small>Şu anda aktif durumda</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card stat-card bg-secondary text-center">
                <div class="card-body">
                    <h6>Pasif Müşteri</h6><h2>@Model.PasifMusteri</h2>
                    <small>Şu anda pasif durumda</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card stat-card bg-info text-center">
                <div class="card-body">
                    <h6>Açık Jira</h6>
                    <h2>@(Model.JiraAktif + Model.JiraBeklemede)</h2>
                    <small>Aktif: @Model.JiraAktif • Beklemede: @Model.JiraBeklemede</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4 equalize align-items-stretch">
        <div class="col-md-8">
            <div class="card chart-card p-3 h-100">
                <h5 class="text-primary mb-3">📈 Aylık Müşteri Artışı</h5>
                <div class="chart-box"><canvas id="customerChart"></canvas></div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card chart-card p-3 text-center h-100">
                <h6 class="text-primary mb-2">📊 Müşteri Durum</h6>
                <div class="chart-box w-100"><canvas id="customerStatusChart"></canvas></div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card chart-card p-3 text-center h-100">
                <h6 class="text-primary mb-2">🧾 Jira Durum</h6>
                <div class="chart-box w-100"><canvas id="jiraStatusChart"></canvas></div>
            </div>
        </div>
    </div>

    <div class="card chart-card mb-4">
        <div class="card-header bg-light fw-bold text-primary">📋 Kayıtlı Müşteriler</div>
        <div class="card-body">
            <!-- 🔍 Firma Arama Kutusu -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-search"></i></span>
                        <input type="search" id="firmaSearch" class="form-control" placeholder="Firma adına göre ara...">
                    </div>
                </div>
            </div>

            <table id="musteriTable" class="table table-striped table-bordered align-middle">
                <thead class="table-secondary">
                    <tr>
                        <th>ID</th>
                        <th>Firma</th>
                        <th>Yetkili</th>
                        <th>Telefon</th>
                        <th>Site URL</th>
                        <th>Teknoloji</th>
                        <th>Durum</th>
                        <th>Talep Sahibi</th>
                        <th>Kayıt Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.Musteriler.OrderByDescending(x => x.KayitTarihi))
                    {
                        <tr>
                            <td>@m.MusteriID</td>
                            <td>@m.Firma</td>
                            <td>@m.FirmaYetkilisi</td>
                            <td>@m.Telefon</td>
                            <td>@m.SiteUrl</td>
                            <td>@m.Teknoloji</td>
                            <td>
                                @if (m.Durum?.ToLower() == "aktif")
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else if (m.Durum?.ToLower() == "pasif")
                                {

                                    <span class="badge bg-secondary">Pasif</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">@m.Durum</span>
                                }
                            </td>
                            <td>@m.TalepSahibi</td>
                            <td>@(m.KayitTarihi?.ToString("dd.MM.yyyy") ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

    <script>
        // 🕓 Saat ve mesaj
        function guncelleSaat() {
            const now = new Date();
            $("#saatTarih").html(`🕓 ${now.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' })} | 📅 ${now.toLocaleDateString('tr-TR')}`);
        }
        setInterval(guncelleSaat, 1000); guncelleSaat();
        $("#motivasyonMetni").text("Hoşgeldiniz!");

        // 📊 Chart.js
        const customerChart = new Chart(document.getElementById('customerChart'), {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.AyEtiketleri)),
                datasets: [{
                    label: 'Yeni Müşteriler',
                    data: @Html.Raw(Json.Serialize(Model.AylikMusteriSayilari)),
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0,123,255,0.15)',
                    fill: true, tension: 0.4, borderWidth: 3
                }]
            },
            options: { scales: { y: { beginAtZero: true } }, plugins: { legend: { display: false } } }
        });

        new Chart(document.getElementById('customerStatusChart'), {
            type: 'doughnut',
            data: {
                labels: ['Aktif', 'Pasif'],
                datasets: [{
                    data: [@Model.AktifMusteri, @Model.PasifMusteri],
                    backgroundColor: ['#28a745', '#6c757d'], borderWidth: 2, borderColor: '#fff'
                }]
            },
            options: { plugins: { legend: { position: 'bottom' } }, cutout: '70%' }
        });

        new Chart(document.getElementById('jiraStatusChart'), {
            type: 'doughnut',
            data: {
                labels: ['Beklemede', 'Aktif', 'Tamamlandı'],
                datasets: [{
                    data: [@Model.JiraBeklemede, @Model.JiraAktif, @Model.JiraTamamlandi],
                    backgroundColor: ['#ffc107', '#0d6efd', '#20c997'], borderWidth: 2, borderColor: '#fff'
                }]
            },
            options: { plugins: { legend: { position: 'bottom' } }, cutout: '70%' }
        });

        // 📋 DataTable
        const table = $('#musteriTable').DataTable({
            order: [[8, "desc"]],
            responsive: true,
            dom: 'Bfrtip',
            buttons: [
                { extend: 'excelHtml5', text: '📗 Excel', className: 'btn btn-success btn-sm' },
                { extend: 'pdfHtml5', text: '📕 PDF', className: 'btn btn-danger btn-sm' },
                { extend: 'print', text: '🖨️ Yazdır', className: 'btn btn-primary btn-sm' }
            ],
            language: { url: "https://cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json" }
        });

        // 🔍 Firma adına göre canlı arama
        $('#firmaSearch').on('keyup', function () {
            table.column(1).search(this.value, true, false).draw();
        });

        // 🚫 Enter formu yenilemesin
        $('#firmaSearch').on('keypress', function (e) {
            if (e.which === 13) e.preventDefault();
        });
    </script>
}
