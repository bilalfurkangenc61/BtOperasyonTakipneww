@model IEnumerable<BtOperasyonTakip.Models.Parametre>
@{
    ViewData["Title"] = "Parametreler";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Parametre Yönetimi</h2>

    <form asp-action="Index" method="post" class="row g-3 border p-3 rounded bg-light mb-4 shadow-sm">
        <div class="col-md-5">
            <label class="form-label">Parametre Adı</label>
            <input name="ParAdi" class="form-control" placeholder="Örnek: .NET veya Bilal Furkan Genç" required />
        </div>
        <div class="col-md-4">
            <label class="form-label">Tür</label>
            <select name="Tur" class="form-select" required>
                <option value="">Seçiniz</option>
                <option value="Teknoloji">Teknoloji</option>
                <option value="TalepEden">TalepEden</option>
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Ekle</button>
        </div>
    </form>

    <table class="table table-bordered table-hover align-middle shadow-sm">
        <thead class="table-secondary">
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Tür</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.ParAdi</td>
                    <td>@p.Tur</td>
                    <td>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@p.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
